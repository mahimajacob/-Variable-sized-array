#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    int n,q;
    cin >>n >>q;
    vector<vector<int>> v(n);
    for(int i=0;i<n;i++) {
        int k_size;
        cin >>k_size;
        vector<int>k(k_size);
        for(int j=0;j<k_size;j++) {
            cin >> k[j];
        }
        v[i] = k;
    }
    
    for(int z=0;z<q;z++) {
        int i,j;
        cin >>i >>j; 
    cout <<v[i][j] <<endl;
    }
    
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    return 0;
}
